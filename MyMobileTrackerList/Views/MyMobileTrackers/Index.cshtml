@model IEnumerable<MyMobileTrackerList.Models.MyMobileTracker>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Ajax.BeginForm("AjaxPush", "MyMobileTrackers", FormMethod.Post,null, new { id = "Test" }))
{ 
    <input type="submit" class ="PushB" value="Start" id="btnStart" name="ButtonType"/>
    <div class="btn btn-default" id="btnStartDiv"> Start </div>

