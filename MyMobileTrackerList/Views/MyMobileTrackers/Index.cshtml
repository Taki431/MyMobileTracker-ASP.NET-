@model IEnumerable<MyMobileTrackerList.Models.MyMobileTracker>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>The time left is <span id="counter"></span>.</p>
<input type = "button" value = "Start" class="PushB" id="btnStart"/>
<p> The current hit count is <span id ="hitcount"></span>.</p>
<input type="button" value="Start" class="PushB" id="btnHitCounter" style="display:none"/>
<p id="infoMessage" style="display:none"> You have <span id="countdowntimer">10 </span> Seconds</p>
<input type="button" value="Refresh" class="PushB" id="btnRefresh"/>
<p id="scoreBar" style= "display: none"> <div id="UserID"></div>  <progress id="pbar"/>  </p>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/hitCounter_Darko.js"></script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HitCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HitCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

